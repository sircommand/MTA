
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
}

model Server {
  id        Int      @id @default(autoincrement())
  name      String
  ip        String
  players   Int      @default(0)
  mode      String
  createdAt DateTime @default(now())
}
